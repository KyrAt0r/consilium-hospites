{
  "arrowParens": "always",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": ["<THIRD_PARTY_MODULES>", "^[./](?!.*\\.(css|scss)$)", "^[./].*\\.(css|scss)$"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
